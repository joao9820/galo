<?php$sucesso = $this->flashMessenger()->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_SUCCESS);$error = $this->flashMessenger()->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_ERROR);$info = $this->flashMessenger()->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_INFO);$alert = $this->flashMessenger()->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_WARNING);?><?php if ($sucesso || $error || $info || $alert) : ?>    <div id="mensagem" class="container-alertas" ng-controller="MensagemCtrl">        <?php if ($sucesso) : ?>            <div class="bs-callout bs-callout-success">                <?php echo $sucesso; ?>            </div>            <?php        endif;        if ($info) :            ?>            <div class="bs-callout bs-callout-info">                <?php echo $info; ?>            </div>            <?php        endif;        if ($error) :            ?>            <div class="bs-callout bs-callout-danger">                <?php echo $error; ?>            </div>            <?php        endif;        if ($alert) :            ?>            <div class="bs-callout bs-callout-warning">                <?php echo $alert; ?>            </div>        <?php endif; ?>    </div><?php endif; ?><script type="text/javascript" language="javascript" class="init">    $(document).ready(function () {        setTimeout(function() {            $('#mensagem').fadeOut('fast'); // "mensagem_professor" fechará após 5 minutos.        }, 3000); // O valor é representado em milisegundos.    });</script>